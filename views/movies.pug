extends layout 

block content 
    div.d-flex.justify-content-between.pb-10
        div
            h1 All Available Movies
        div
            a(href='/movies/new').btn.btn-primary Create a New Movie
    if movies.length == 0
        h5.text-center.m-10.p-10 No available movies
    br
    if movies.length > 0
        table.table.table-striped.pt-10
            thead
                tr
                    th Title
                    th Director
                    th Year
                    th Actions
            tbody
                each movie in movies
                    tr
                        td #{movie.title}
                        td #{movie.director}
                        td #{movie.year}
                        td 
                            a(href=`/movies/${movie.id}`).btn.btn-primary.btn-sm View